# ============================================
# NLP Service - Environment Variables
# ============================================

# Database Configuration
# ----------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=baxperience_operational
DB_USER=postgres
DB_PASSWORD=your_password_here

# Kafka Configuration
# -------------------
KAFKA_BROKER=localhost:9092

# Service Configuration
# ---------------------
# Puerto para el servidor HTTP de health checks
HTTP_PORT=5001

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Timeouts (en segundos)
KAFKA_CONSUMER_TIMEOUT=1000
KAFKA_PRODUCER_TIMEOUT=5

# NLP Configuration
# -----------------
# Idiomas soportados (separados por coma)
SUPPORTED_LANGUAGES=es,en

# Nivel de confianza m√≠nimo para matches (0.0 - 1.0)
MIN_CONFIDENCE_THRESHOLD=0.6

# Fuzzy matching threshold para nombres de lugares (0.0 - 1.0)
FUZZY_MATCH_THRESHOLD=0.85
