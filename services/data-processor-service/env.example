# BAXperience Data Processor - Environment Configuration
# ====================================================

# Base de Datos Operacional (Principal)
OPERATIONAL_DB_HOST=localhost
OPERATIONAL_DB_PORT=5432
OPERATIONAL_DB_NAME=baxperience_operational
OPERATIONAL_DB_USER=postgres
OPERATIONAL_DB_PASSWORD=your_password_here

# Base de Datos Data Processor (Para Clustering)
PROCESSOR_DB_HOST=localhost
PROCESSOR_DB_PORT=5433
PROCESSOR_DB_NAME=baxperience_processor
PROCESSOR_DB_USER=postgres
PROCESSOR_DB_PASSWORD=your_password_here

# Configuración de CSV
CSV_BASE_PATH=../../csv-filtrados/

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=csv_processor.log

# Configuración de Procesamiento
BATCH_SIZE=100
MAX_RETRIES=3
